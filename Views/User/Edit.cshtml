@model User

@{
    ViewBag.Title = "Edit User";
}

@using (Html.BeginForm("Edit", "User", FormMethod.Post))
{
    <div class="d-flex align-items-center justify-content-center">
        <div class="form-table">
            <div class="row">
                <div class="p-0 text-center text-uppercase">@ViewBag.Title</div>
            </div>
            <div class="row">
                <div class="cell">@Html.LabelFor(user => user.UserName)</div>
                <div class="cell">@Html.EditorFor(user => user.UserName)</div>
            </div>
            <div class="row">
                <div class="cell"></div>
                <div class="cell">@Html.ValidationMessageFor(user => user.UserName, "", new { @class = "text-danger" })</div>
            </div>
            <div class="row">
                <div class="cell">@Html.LabelFor(user => user.IsAdministrator)</div>
                <div class="cell">@Html.EditorFor(user => user.IsAdministrator)</div>
            </div>
            <div class="row">
                <div class="cell"></div>
                <div class="cell">@Html.ValidationMessageFor(user => user.IsAdministrator, "", new { @class = "text-danger" })</div>
            </div>
            <div class="row">
                <div class="cell">
                    <label class="text-danger">@Html.DisplayFor(user => user.ErrorMessage)</label>
                    @Html.HiddenFor(user => user.UserID)
                    @* @Html.EditorFor(user => user.Password, new { disabled = "disabled", @readonly = "readonly" }) *@
                </div>
            </div>
            <div class="row">
                <div class="cell button-container">
                    <input type="submit" value="Save"/>
                    <input type="button" value="Cancel" onclick="location.href='@Url.Action("Index")'"/>
                </div>
            </div>
        </div>
    </div>
}

<style>
    input.text-box {
        width: 100%;
    }
</style>