@model Book
@{
    ViewBag.Title = "New Book";
}
<h1>@ViewBag.Title</h1>
<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="form-group">
        @Html.LabelFor(book => book.AuthorID)
        @Html.DropDownListFor(book => book.AuthorID, (IEnumerable<SelectListItem>)ViewBag.Authors, "Please select an author...", new { @class = "form-control" })
        @Html.ValidationMessageFor(book => book.AuthorID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(book => book.Title)
        @Html.TextBoxFor(book => book.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(book => book.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(book => book.CoverFile)
        <input asp-for="CoverFile" accept="image/*"/>
    </div>
    <div class="form-group">
        <button type="submit" class="">Submit</button>
        <button type="button" class="" onclick="location.href=@Url.Action("Create", "Author")">
            Create an author
        </button>
    </div>
</form>